# =============================================================================
# LIVCHAT - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# This single file is used by docker-compose for local development
# =============================================================================

# =============================================================================
# APP URL (Public URL for share links, webhooks, etc)
# =============================================================================
# Docker: http://localhost:3000
# Prod: https://livchat.ai
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
# Docker: uses local postgres (livchat:livchat@postgres:5432/livchat)
# Prod: Neon serverless
DATABASE_URL="postgresql://livchat:livchat@localhost:5432/livchat"
POSTGRES_USER=livchat
POSTGRES_PASSWORD=livchat
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=livchat

# =============================================================================
# AUTH (Clerk)
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# =============================================================================
# WUZAPI (WhatsApp Backend)
# =============================================================================
WUZAPI_URL="http://localhost:8080"
WUZAPI_PORT=8080
WUZAPI_ADMIN_TOKEN="your-admin-token-here"
WUZAPI_INTERNAL_TOKEN="your-internal-token-here"
WUZAPI_WEBHOOK_SECRET="your-webhook-secret-here"
WUZAPI_GLOBAL_ENCRYPTION_KEY="32-char-encryption-key-here-xxx"
WUZAPI_GLOBAL_HMAC_KEY="your-hmac-key-here"
WUZAPI_GLOBAL_WEBHOOK="http://localhost:3000/api/webhooks/wuzapi"

# =============================================================================
# AST (AI Agent Service)
# =============================================================================
AST_URL="http://localhost:9000"
AST_API_KEY="your-ast-api-key-here"
AUTH_SECRET="your-ast-api-key-here"

# LLM API Keys
OPENAI_API_KEY="sk-..."
GOOGLE_API_KEY="AIza..."
GROQ_API_KEY="gsk_..."
ANTHROPIC_API_KEY=""

# LangSmith (optional)
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=""
LANGSMITH_PROJECT="livchat-dev"

# =============================================================================
# PARTYKIT (Real-time Streaming)
# =============================================================================
NEXT_PUBLIC_PARTYKIT_HOST="127.0.0.1:1999"

# =============================================================================
# ERROR TRACKING (Sentry)
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG="livchat"
SENTRY_PROJECT="sentry"

# =============================================================================
# LOGGING (Axiom)
# =============================================================================
NEXT_PUBLIC_AXIOM_DATASET="livchat"
NEXT_PUBLIC_AXIOM_TOKEN=""

# =============================================================================
# STORAGE (Vercel Blob)
# =============================================================================
BLOB_READ_WRITE_TOKEN=""

# =============================================================================
# CACHE (Redis/Upstash)
# =============================================================================
# Docker: uses local redis (localhost:6379)
# Prod: Upstash
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# =============================================================================
# FEATURE FLAGS (Statsig)
# =============================================================================
NEXT_PUBLIC_STATSIG_CLIENT_KEY=""
STATSIG_SERVER_API_KEY=""

# =============================================================================
# INTERNAL
# =============================================================================
INTERNAL_SECRET="your-internal-secret-here"

# =============================================================================
# DEPLOY TOKENS (for scripts/deploy.sh)
# =============================================================================
# Vercel: https://vercel.com/account/tokens
VERCEL_TOKEN=""

# Fly.io: flyctl tokens create org
# Cupom $50 (funcionando em 21/12/2025): https://fly.io/hello/fly-indie-hackers
FLY_API_TOKEN=""
