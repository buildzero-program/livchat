# =============================================================================
# LIVCHAT.AI - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# When adding new variables, update the schema in "/src/env.js" accordingly.
#
# PROD values are documented in comments for reference.
# Actual prod values are set in Vercel Dashboard > Settings > Environment Variables
# =============================================================================

# =============================================================================
# DATABASE (Neon PostgreSQL)
# =============================================================================
# DEV: Branch dev
# PROD: Branch main
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# =============================================================================
# AUTH (Clerk)
# =============================================================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxx"
CLERK_SECRET_KEY="sk_test_xxx"

# =============================================================================
# WUZAPI (WhatsApp Backend)
# =============================================================================
# DEV: http://localhost:8080
# PROD: https://wuz.livchat.ai
WUZAPI_URL="http://localhost:8080"
WUZAPI_ADMIN_TOKEN="your-admin-token"
WUZAPI_INTERNAL_TOKEN="your-internal-token"
WUZAPI_WEBHOOK_SECRET="your-hmac-secret"

# =============================================================================
# AST (AI Agent Service)
# =============================================================================
# DEV: http://localhost:9000
# PROD: https://ast.livchat.ai
AST_URL="http://localhost:9000"
AST_API_KEY="ast_xxx"

# =============================================================================
# PARTYKIT (Real-time Streaming)
# =============================================================================
# DEV: 127.0.0.1:1999
# PROD: livchat-ivy.pedrohnas0.partykit.dev
NEXT_PUBLIC_PARTYKIT_HOST="127.0.0.1:1999"

# =============================================================================
# ERROR TRACKING (Sentry)
# =============================================================================
NEXT_PUBLIC_SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"
SENTRY_AUTH_TOKEN="sntrys_xxx"
SENTRY_ORG="your-org"
SENTRY_PROJECT="your-project"

# =============================================================================
# LOGGING (Axiom)
# =============================================================================
NEXT_PUBLIC_AXIOM_DATASET="livchat"
NEXT_PUBLIC_AXIOM_TOKEN="xaat-xxx"

# =============================================================================
# STORAGE (Vercel Blob)
# =============================================================================
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxx"

# =============================================================================
# API GATEWAY (Cloudflare Worker <-> Vercel)
# =============================================================================
INTERNAL_SECRET="your-random-secret"

# =============================================================================
# CACHE (Upstash Redis)
# =============================================================================
UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="xxx"

# =============================================================================
# FEATURE FLAGS (Statsig) - OPTIONAL
# =============================================================================
# NEXT_PUBLIC_STATSIG_CLIENT_KEY="client-xxx"
# STATSIG_SERVER_API_KEY="secret-xxx"

# =============================================================================
# MESSAGE QUEUE (Upstash QStash) - NOT ACTIVE YET
# =============================================================================
# QSTASH_URL="https://qstash.upstash.io"
# QSTASH_TOKEN="xxx"
# QSTASH_CURRENT_SIGNING_KEY="sig_xxx"
# QSTASH_NEXT_SIGNING_KEY="sig_xxx"

# =============================================================================
# PAYMENTS (AbacatePay) - NOT ACTIVE YET
# =============================================================================
# ABACATEPAY_API_KEY="abc_dev_xxx"
# ABACATEPAY_WEBHOOK_SECRET="xxx"
